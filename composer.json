{
    "name": "elife/api-validator",
    "description": "eLife Sciences API validator",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "eLife\\ApiValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "test\\eLife\\ApiValidator\\": "test/src/"
        }
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "beberlei/assert": "^3.0",
        "guzzlehttp/psr7": "^1.7 || ^2.0",
        "justinrainbow/json-schema": "^5.3 || ^6.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4 || ^7.0",
        "phpspec/prophecy": "^1.5",
        "phpunit/phpunit": "^6.5 || ^9.6",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
